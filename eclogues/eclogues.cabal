name: eclogues
version: 0.1.0.0
cabal-version: >=1.10
build-type: Simple
license: BSD3
license-file: ../LICENSE
copyright: (c) 2015 Swinburne Software Innovation Lab
maintainer: Rhys Adams <rhysadams@swin.edu.au>
synopsis: API and types for Eclogues interaction.

library
    exposed-modules:
        Eclogues.API,
        Eclogues.Job,
        Eclogues.ServantInstances,
        Units
    other-modules:
        Eclogues.Job.Aeson,
        Text.Regex.Cross
    build-depends:
        base >=4.7.0.1 && <4.9,
        text >=1.1.0.0 && <1.3,
        bytestring >=0.10.4.0 && <0.11,
        aeson >=0.8 && <0.10,
        servant >=0.4.1 && <0.5,
        transformers >=0.4.0.0 && <0.5,
        uuid-types,
        uuid-aeson >=0.1 && <0.2,
        lens >=4.7.0.1 && <4.14,
        path >=0.5,
        network-uri >=2.6,
        hashable
    default-language: Haskell2010
    default-extensions: LambdaCase ScopedTypeVariables
    other-extensions: CPP DataKinds ExtendedDefaultRules FlexibleInstances
                      GeneralizedNewtypeDeriving OverloadedStrings QuasiQuotes
                      TemplateHaskell TypeOperators
    hs-source-dirs: src
    ghc-options: -Wall -Werror

    if impl(ghcjs)
        build-depends: ghcjs-base
                     , template-haskell
        cpp-options:   -DGhcjsBase
    else
        build-depends: pcre-heavy
